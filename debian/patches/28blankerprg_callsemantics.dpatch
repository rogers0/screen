@@ -3785,7 +3785,7 @@
 	  free(blankerprg);
 	  blankerprg = 0;
 	}
-      if (args[0][0])
+      if (args[0] && args[0][0])
 	blankerprg = SaveArgs(args);
       break;
 #endif
